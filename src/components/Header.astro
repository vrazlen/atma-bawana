---
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/programs', label: 'Programs' },
  { href: '/projects', label: 'Projects' },
  { href: '/get-involved', label: 'Get Involved' },
  { href: '/contact', label: 'Contact' }
];
---
<header class="bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/80 sticky top-0 z-50 border-b border-accent-earth/40">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 font-heading text-xl text-brand-green font-semibold tracking-wide">
      <img src="/images/logo.png" alt="Atma Bawana logo" class="w-9 h-9 object-contain" />
      <span>Atma Bawana</span>
    </a>
    <nav class="hidden md:flex gap-6 text-sm font-medium">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-text/70 hover:text-brand-green transition-colors"
        >
          {link.label}
        </a>
      ))}
    </nav>
    <a
      href="/get-involved"
      class="hidden md:inline-flex bg-gradient-to-r from-brand-green to-brand-green-light text-white font-heading text-sm px-4 py-2 rounded-lg shadow-lg hover:scale-[1.02] transition-transform"
    >
      Join the Covenant
    </a>
    <details class="md:hidden relative">
      <summary class="list-none cursor-pointer border rounded-lg px-3 py-2 text-sm font-heading text-brand-green">Menu</summary>
      <div class="absolute right-4 mt-2 bg-white shadow-xl rounded-lg border border-accent-earth/50 flex flex-col w-48">
        {links.map((link) => (
          <a
            href={link.href}
            class="px-4 py-2 border-b border-accent-earth/30 last:border-0 text-sm hover:bg-brand-green/10"
          >
            {link.label}
          </a>
        ))}
        <a
          href="/get-involved"
          class="px-4 py-2 text-sm font-semibold text-brand-green"
        >
          Join the Covenant
        </a>
      </div>
    </details>
  </div>
</header>
