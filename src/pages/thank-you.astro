---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/ui/Button.astro';
---
<MainLayout title="Thank You" description="Terima kasih for joining the covenant.">
  <section class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="bg-white border border-accent-earth/60 rounded-3xl shadow-card p-10 text-center space-y-4 max-w-2xl">
      <p class="text-sm uppercase tracking-[0.4em] text-accent-innovator">Terima Kasih</p>
      <h1 class="text-4xl font-heading text-brand-green">Thank you for reaching out.</h1>
      <p class="text-text/70 text-lg">
        Your message and commitment have been received. Guardians from the circle will be in touch soon.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/">Return Home</Button>
        <Button href="/get-involved" variant="secondary">Take Another Action</Button>
      </div>
    </div>
  </section>
</MainLayout>
