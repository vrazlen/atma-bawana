---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/ui/Button.astro';
---
<MainLayout title="Contact" description="Reach the Atma Bawana guardianship circle.">
  <section class="bg-background py-20">
    <div class="max-w-3xl mx-auto px-4 text-center space-y-4">
      <p class="text-sm uppercase tracking-[0.4em] text-accent-innovator">Reach Out</p>
      <h1 class="text-4xl font-heading">Contact the Circle</h1>
      <p class="text-text/70">
        Send a message to the guardianship circle. We respond to all covenant partners and curious allies.
      </p>
    </div>
  </section>

  <section class="max-w-3xl mx-auto px-4 pb-20">
    <form
      action="https://formspree.io/f/YOUR_OTHER_FORM_ID"
      method="POST"
      class="bg-white border border-accent-earth/60 shadow-card rounded-3xl p-8 space-y-6"
    >
      <input type="hidden" name="_next" value="/thank-you" />
      <div>
        <label class="block text-sm font-heading text-text mb-2" for="contact-name">Full name</label>
        <input
          id="contact-name"
          name="name"
          type="text"
          required
          class="w-full border border-accent-earth/60 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-green"
        />
      </div>
      <div>
        <label class="block text-sm font-heading text-text mb-2" for="contact-email">Email</label>
        <input
          id="contact-email"
          name="email"
          type="email"
          required
          class="w-full border border-accent-earth/60 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-green"
        />
      </div>
      <div>
        <label class="block text-sm font-heading text-text mb-2" for="subject">Subject</label>
        <input
          id="subject"
          name="subject"
          type="text"
          required
          class="w-full border border-accent-earth/60 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-green"
        />
      </div>
      <div>
        <label class="block text-sm font-heading text-text mb-2" for="message">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full border border-accent-earth/60 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-green"
        ></textarea>
      </div>
      <Button type="submit" variant="primary" class="w-full justify-center">Send Message</Button>
    </form>
  </section>
</MainLayout>
